<Window
    x:Class="LoquatDocs.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LoquatDocs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

  <NavigationView x:Name="MainNavigationView" IsBackEnabled="False" IsBackButtonVisible="Collapsed" ItemInvoked="OnNavigationViewItemInvoked">
    <NavigationView.MenuItems>
      <NavigationViewItem Icon="Find" x:Uid="Search" Tag="search"/>
      <NavigationViewItem Icon="Home" x:Uid="Home" Tag="home"/>
      <NavigationViewItem Icon="List" x:Uid="List" Tag="list"/>
    </NavigationView.MenuItems>
    <Frame Padding="10,10,10,10" Margin="0,0,0,0" x:Name="ContentFrame"/>
  </NavigationView>
</Window>
